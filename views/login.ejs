<html>
	<head>
	<title>Login</title>
	<link rel="stylesheet" href="../css/zombie.css">
</head>
<body>
	<h1>Source Undead</h1>
	<div id="error"></div>
	<form name="loginForm" id="login">
		<div>
			<div>
				<label class="label">Username:</label>
				<input type="text" name="user" placeholder="Username.." required />
			</div>
			<div>
				<label class="label">Password:</label>
				<input type="password" name="password" placeholder="Password.." required />
			</div>
			<div>
				<label class="label">&nbsp;</label>
				<button class="divBtn">Login</button>
				<small>
					<span class="inSpan">Don't have an account? <a href="/create">Create An Account</a>!</span>
				</small>
			</div>
		</div>
	</form>
</body>
<script>
window.onload = function() {
	document.querySelector("[name='user']").focus();
}
</script>
</html>